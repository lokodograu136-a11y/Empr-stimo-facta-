                </form>
            </div>

            <div class="card">
                <h3>Clientes Cadastrados</h3>
                <div id="clients-list">
                    <p>Nenhum cliente cadastrado ainda.</p>
                </div>
            </div>
        </div>

        <!-- EmprÃ©stimos -->
        <div id="loans" class="tab-content">
            <div class="card">
                <h2>Todos os EmprÃ©stimos</h2>
                <div id="loans-list">
                    <p>Nenhum emprÃ©stimo registrado ainda.</p>
                </div>
            </div>
        </div>
