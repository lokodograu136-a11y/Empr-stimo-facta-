    <script>
        // Armazenamento local (simulado)
        let clients = JSON.parse(localStorage.getItem('clients') || '[]');
        let loans = JSON.parse(localStorage.getItem('loans') || '[]');

        // Elementos
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');
        const clientSelect = document.getElementById('client-select');
        const loanForm = document.getElementById('loan-form');
        const clientForm = document.getElementById('client-form');
        const amountToReceive = document.getElementById('amount-to-receive');
        const loanAmount = document.getElementById('loan-amount');
        const interestRate = document.getElementById('interest-rate');

        // Atualizar valor a receber quando valor ou juros mudarem
        [loanAmount, interestRate].forEach(input => {
            input.addEventListener('input', calculateAmountToReceive);
        });

        function calculateAmountToReceive() {
            const principal = parseFloat(loanAmount.value) || 0;
            const rate = parseFloat(interestRate.value) || 0;
            const amount = principal * (1 + rate / 100);
            amountToReceive.value = `R$ ${amount.toFixed(2).replace('.', ',')}`;
        }

        // Trocar abas
        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const tabId = btn.getAttribute('data-tab');
                
                tabBtns.forEach(b => b.classList.remove('active'));
                tabContents.forEach(c => c.classList.remove('active'));
                
                btn.classList.add('active');
                document.getElementById(tabId).classList.add('active');
                
                // Atualizar conteÃºdo dinÃ¢mico
                if (tabId === 'dashboard') updateDashboard();
                if (tabId === 'new-loan') updateClientSelect();
                if (tabId === 'clients') updateClientsList();
                if (tabId === 'loans') updateLoansList();
            });
        });

        // Cadastrar cliente
        clientForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('client-name').value;
            const phone = document.getElementById('client-phone').value;
            const business = document.getElementById('client-business').value;
            
            const client = {
                id: Date.now(),
                name,
                phone,
                business,
                createdAt: new Date().toISOString()
            };
            
            clients.push(client);
            localStorage.setItem('clients', JSON.stringify(clients));
            clientForm.reset();
            updateClientSelect();
            updateClientsList();
            updateDashboard();
            alert('Cliente cadastrado com sucesso!');
        });

        // Registrar emprÃ©stimo
        loanForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const clientId = parseInt(clientSelect.value);
            const amount = parseFloat(loanAmount.value);
            const rate = parseFloat(interestRate.value);
            const dueDate = document.getElementById('due-date').value;
            
            const client = clients.find(c => c.id === clientId);
            if (!client) {
                alert('Selecione um cliente vÃ¡lido!');
                return;
            }
            
            const loan = {
                id: Date.now(),
                clientId,
                clientName: client.name,
                amount,
                rate,
                dueDate,
                amountToReceive: amount * (1 + rate / 100),
                status: 'unpaid',
                createdAt: new Date().toISOString()
            };
            
            loans.push(loan);
            localStorage.setItem('loans', JSON.stringify(loans));
            loanForm.reset();
            amountToReceive.value = '';
            updateDashboard();
            updateLoansList();
            alert('EmprÃ©stimo registrado com sucesso!');
        });

        // Atualizar seleÃ§Ã£o de clientes
        function updateClientSelect() {
            clientSelect.innerHTML = '<option value="">-- Selecione um cliente --</option>';
            clients.forEach(client => {
                const option = document.createElement('option');
                option.value = client.id;
                option.textContent = `${client.name} - ${client.business || 'Sem loja'}`;
                clientSelect.appendChild(option);
            });
        }

        // Atualizar lista de clientes
        function updateClientsList() {
            const list = document.getElementById('clients-list');
            if (clients.length === 0) {
                list.innerHTML = '<p>Nenhum cliente cadastrado ainda.</p>';
                return;
            }
            
            list.innerHTML = '';
            clients.forEach(client => {
                const div = document.createElement('div');
                div.className = 'loan-item';
                div.innerHTML = `
                    <div class="loan-header">
                        <strong>${client.name}</strong>
                        <span>${client.business || 'â€”'}</span>
                    </div>
                    <div>ðŸ“ž ${client.phone}</div>
                    <div>ðŸ“… Cadastrado em: ${new Date(client.createdAt).toLocaleDateString('pt-BR')}</div>
                `;
                list.appendChild(div);
            });
        }

        // Atualizar lista de emprÃ©stimos
        function updateLoansList() {
            const list = document.getElementById('loans-list');
            if (loans.length === 0) {
                list.innerHTML = '<p>Nenhum emprÃ©stimo registrado ainda.</p>';
                return;
            }
            
            list.innerHTML = '';
            loans.slice().reverse().forEach(loan => {
                const div = document.createElement('div');
                div.className = 'loan-item';
                div.innerHTML = `
                    <div class="loan-header">
                        <strong>${loan.clientName}</strong>
                        <span class="status ${loan.status}">${loan.status === 'paid' ? 'Pago' : 'Pendente'}</span>
                    </div>
                    <div>ðŸ’µ Emprestado: R$ ${loan.amount.toFixed(2).replace('.', ',')}</div>
                    <div>ðŸ“ˆ A receber: R$ ${loan.amountToReceive.toFixed(2).replace('.', ',')}</div>
                    <div>ðŸ“… Vencimento: ${new Date(loan.dueDate).toLocaleDateString('pt-BR')}</div>
                    <div>ðŸ“Š Juros: ${loan.rate}%</div>
                `;
                list.appendChild(div);
            });
        }

        // Atualizar dashboard
        function updateDashboard() {
            const activeLoans = loans.filter(l => l.status === 'unpaid').length;
            const totalToReceive = loans
                .filter(l => l.status === 'unpaid')
                .reduce((sum, loan) => sum + loan.amountToReceive, 0);
            const totalClientsCount = clients.length;

            document.getElementById('active-loans').textContent = activeLoans;
            document.getElementById('total-to-receive').textContent = `R$ ${totalToReceive.toFixed(2).replace('.', ',')}`;
            document.getElementById('total-clients').textContent = totalClientsCount;

            // Ãšltimos emprÃ©stimos
            const recentLoans = document.getElementById('recent-loans');
            const recent = loans.slice(-5).reverse();
            if (recent.length === 0) {
                recentLoans.innerHTML = '<p>Nenhum emprÃ©stimo registrado ainda.</p>';
                return;
            }

            recentLoans.innerHTML = '';
            recent.forEach(loan => {
                const div = document.createElement('div');
                div.className = 'loan-item';
                div.innerHTML = `
                    <div class="loan-header">
                        <strong>${loan.clientName}</strong>
                        <span class="status ${loan.status}">${loan.status === 'paid' ? 'Pago' : 'Pendente'}</span>
                    </div>
                    <div>ðŸ“ˆ R$ ${loan.amountToReceive.toFixed(2).replace('.', ',')} - ${new Date(loan.dueDate).toLocaleDateString('pt-BR')}</div>
                `;
                recentLoans.appendChild(div);
            });
        }

        // Inicializar
        updateClientSelect();
        updateDashboard();
    </script>
</body>
</html>
