<body>
    <div class="container">
        <header>
            <h1>ðŸ’° EmprestaFÃ¡cil</h1>
            <p>Gerencie emprÃ©stimos para lojistas com facilidade e seguranÃ§a</p>
        </header>

        <div class="tabs">
            <button class="tab-btn active" data-tab="dashboard">ðŸ“Š Dashboard</button>
            <button class="tab-btn" data-tab="new-loan">âž• Novo EmprÃ©stimo</button>
            <button class="tab-btn" data-tab="clients">ðŸ‘¥ Clientes</button>
            <button class="tab-btn" data-tab="loans">ðŸ“‹ EmprÃ©stimos</button>
        </div>

        <!-- Dashboard -->
        <div id="dashboard" class="tab-content active">
            <div class="stats">
                <div class="stat-card">
                    <h3>EmprÃ©stimos Ativos</h3>
                    <div class="stat-value" id="active-loans">0</div>
                </div>
                <div class="stat-card">
                    <h3>Valor a Receber</h3>
                    <div class="stat-value" id="total-to-receive">R$ 0,00</div>
                </div>
                <div class="stat-card">
                    <h3>Clientes Cadastrados</h3>
                    <div class="stat-value" id="total-clients">0</div>
                </div>
            </div>

            <div class="card">
                <h3>Ãšltimos EmprÃ©stimos</h3>
                <div id="recent-loans">
                    <p>Nenhum emprÃ©stimo registrado ainda.</p>
                </div>
            </div>
        </div>

        <!-- Novo EmprÃ©stimo -->
        <div id="new-loan" class="tab-content">
            <div class="card">
                <h2>Novo EmprÃ©stimo</h2>
                <form id="loan-form">
                    <div class="form-group">
                        <label for="client-select">Selecione o Cliente</label>
                        <select id="client-select" required>
                            <option value="">-- Selecione um cliente --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="loan-amount">Valor Emprestado (R$)</label>
                        <input type="number" id="loan-amount" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="interest-rate">Taxa de Juros Mensal (%)</label>
                        <input type="number" id="interest-rate" step="0.01" min="0" value="5" required>
                    </div>
                    <div class="form-group">
                        <label for="due-date">Data de Vencimento</label>
                        <input type="date" id="due-date" required>
                    </div>
                    <div class="form-group">
                        <label for="amount-to-receive">Valor a Receber (R$)</label>
                        <input type="text" id="amount-to-receive" readonly>
                    </div>
                    <button type="submit">Registrar EmprÃ©stimo</button>
                </form>
            </div>
        </div>

        <!-- Clientes -->
        <div id="clients" class="tab-content">
            <div class="card">
                <h2>Cadastrar Novo Cliente</h2>
